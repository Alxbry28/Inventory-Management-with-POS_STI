<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".POSFragment">



    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:id="@+id/tvProductName2"
                    android:text="Magic Sarap"
                    android:textSize="22dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView android:id="@+id/tvProductPrice2"
                    android:text="5.00"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="25dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="5"
                        android:gravity="center"
                        android:background="@drawable/form_background"
                        android:backgroundTint="@color/white_700"
                        android:layout_margin="5dp" />

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="25dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:id="@+id/tvProductName3"
                    android:text="Potatos"
                    android:textSize="22dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView android:id="@+id/tvProductPrice3"
                    android:text="225.00"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="25dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="50"
                        android:gravity="center"
                        android:background="@drawable/form_background"
                        android:backgroundTint="@color/white_700"
                        android:layout_margin="5dp" />

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="25dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvProductName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carrots"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/tvProductPrice4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55.00"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="25dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="25"
                        android:gravity="center"
                        android:background="@drawable/form_background"
                        android:backgroundTint="@color/white_700"
                        android:layout_margin="5dp" />

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="25dp"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:id="@+id/tvProductName5"
                    android:text="Kangkong"
                    android:textSize="22dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView android:id="@+id/tvProductPrice5"
                    android:text="25.00"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="25dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="2"
                        android:gravity="center"
                        android:background="@drawable/form_background"
                        android:backgroundTint="@color/white_700"
                        android:layout_margin="5dp" />

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="25dp"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Payment" />
</LinearLayout>