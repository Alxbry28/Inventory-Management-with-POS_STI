<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/bg_blue700"
    android:padding="20dp">

    <TextView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAllCaps="true"
        android:text="Generic Inventory Management App"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/bannerDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"

        android:layout_below="@id/banner" />

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/email"
    android:layout_marginTop="25dp"
    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
    android:hint="Email"
    android:textColorHint="@color/gray_450"

    app:boxBackgroundColor="@color/white"
    app:startIconDrawable="@drawable/ic_baseline_email_24"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<com.google.android.material.textfield.TextInputEditText
    android:inputType="textPersonName"
    android:textSize="16sp"
    android:textColor="@color/black"
    android:ems="10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

</com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
    android:layout_marginTop="10dp"
    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
    android:hint="Password"
        app:hintTextColor="@color/gray_450"
    app:boxBackgroundColor="@color/white"
    app:startIconDrawable="@drawable/ic_baseline_lock_24"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<com.google.android.material.textfield.TextInputEditText
    android:ems="10"
    android:textColor="@color/black"
    android:textSize="16sp"
    android:inputType="textPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

</com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Forgot Password?" />

    </RelativeLayout>

    <Button
        android:id="@+id/signIn"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password"/>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password"/>

    <RelativeLayout
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDontHave"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an Account? "
            android:textColor="@color/white" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/register"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_toRightOf="@id/tvDontHave" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_marginTop="355dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_marginTop="100dp"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/Date"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_centerHorizontal="true"
        android:text="Date"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"/>

</LinearLayout>