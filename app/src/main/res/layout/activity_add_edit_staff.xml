<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_700"
    tools:context=".views.staff.AddEditStaffActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBusinessName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Name"
                    android:textSize="25sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>

                <TextView android:id="@+id/tvStaffTransactionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Staff"
                    android:textSize="18sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name: "
                    android:textSize="15sp"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>

                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter First Name"
                    android:background="@drawable/form_background"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvProductCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name: "
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>

                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Last Name"
                    android:background="@drawable/form_background"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role:"
                    android:textSize="15sp"
                    android:layout_below="@id/itemname"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>

                <EditText
                    android:editable="false"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:id="@+id/etRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Choose Role"
                    android:background="@drawable/form_background"
                    android:layout_marginTop="5dp"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="15sp"
                    android:layout_below="@id/quantity"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email"
                    android:background="@drawable/form_background"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:inputType="textEmailAddress"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:id="@+id/lnrPasswords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password:"
                        android:textSize="15sp"
                        android:layout_below="@id/quantity"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"/>

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Password"
                        android:background="@drawable/form_background"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:inputType="textPassword"
                        android:textSize="20sp"/>


                    <TextView
                        android:id="@+id/tvConfirmPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm Password:"
                        android:textSize="15sp"
                        android:layout_below="@id/quantity"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"/>

                    <EditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Retype Password"
                        android:background="@drawable/form_background"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:inputType="textPassword"
                        android:textSize="20sp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnAddEditStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:backgroundTint="@color/bg_blue500"
                    android:text="Add" />

                <Button
                    android:backgroundTint="@color/bg_blue700"
                    android:id="@+id/btnBackToStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back" />

            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</LinearLayout>