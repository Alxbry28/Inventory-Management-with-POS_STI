<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_700"
    tools:context=".AddItemForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Name"
            android:textSize="25sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Product"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name: "
            android:textSize="15sp"
            android:layout_below="@id/tv1"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/etProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvname"
            android:hint="Enter Product Name"
            android:background="@drawable/form_background"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvProductCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: "
            android:textSize="15sp"
            android:layout_below="@id/tv1"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/etProductCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvname"
            android:hint="Enter Product Category"
            android:background="@drawable/form_background"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvStocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stocks"
            android:textSize="15sp"
            android:layout_below="@id/itemname"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/etStocks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Quantity"
            android:background="@drawable/form_background"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:padding="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="15sp"
            android:layout_below="@id/quantity"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Product Price"
            android:background="@drawable/form_background"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:inputType="number"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnAddItemProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/bg_blue500"
            android:text="Add" />

        <Button
            android:backgroundTint="@color/bg_blue700"
            android:id="@+id/btnViewInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="View Inventory" />

        <Button
            android:backgroundTint="@color/bg_blue700"
            android:id="@+id/btnBackToProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />

    </LinearLayout>
</LinearLayout>